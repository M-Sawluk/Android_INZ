<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:actionBarStyle">@drawable/news_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Underline" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlActivated">#050505</item>
        <item name="colorControlNormal">#6c6c6c</item>
        <item name="android:textColorHint">#6c6c6c</item>
    </style>
    <style name="AudioFileInfoOverlayText">
        <item name="android:paddingLeft">6px</item>
        <item name="android:paddingBottom">6px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>



</resources>
