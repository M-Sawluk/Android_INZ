<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    tools:context=".RegisterForm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/rainbow"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="serif"
                android:text="TĘCZA - DLA PRZEDSZKOLI I RODZICÓW"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible"
                tools:layout_editor_absoluteX="143dp"
                tools:layout_editor_absoluteY="16dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Imię"
            android:inputType="textPersonName"
            android:textColor="#6c6c6c"
            android:theme="@style/Underline" />

        <TextView
            android:id="@+id/validName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tylko 45 polski znaków"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/surname"
            android:theme="@style/Underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6c6c6c"
            android:ems="10"
            android:hint="Nazwisko"
            android:inputType="textPersonName" />


        <TextView
            android:id="@+id/validSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tylko 45 polski znaków"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/civilId"
            android:theme="@style/Underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6c6c6c"
            android:ems="10"
            android:hint="Nr dowodu"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/validCivilId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zly format. Przyklad APZ123456"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:theme="@style/Underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6c6c6c"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/validEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nie poprawny format adresu email"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/phone"
            android:theme="@style/Underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6c6c6c"
            android:ems="10"
            android:hint="Nr telefonu"
            android:inputType="phone" />

        <TextView
            android:id="@+id/validPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wprowadź 9 cyfr"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/password"
            android:theme="@style/Underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6c6c6c"
            android:ems="10"
            android:hint="Hasło"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/validPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciąg od 8 do 30 znaków"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/repeatPassword"
            android:theme="@style/Underline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6c6c6c"
            android:ems="10"
            android:hint="Powtórz hasło"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/validRepeatPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podane hasła są inne"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/zarejestruj_form"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:text="ZAREJESTRUJ SIĘ"
            android:transitionName="registerButtonTransition" />
    </LinearLayout>

</LinearLayout>