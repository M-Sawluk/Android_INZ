<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbggg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            tools:srcCompat="@drawable/tenor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:text="Tytuł"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@drawable/news_background"/>

        <TextView
            android:id="@+id/news_content_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:text="Content"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:background="@drawable/news_background"/>

        <TextView
            android:id="@+id/news_author_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:text="Autor: "
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:background="@drawable/news_background"/>

        <TextView
            android:id="@+id/news_data_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:text="Data: "
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:background="@drawable/news_background"/>

    </LinearLayout>

    <Button
        android:id="@+id/delete_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/ripple_effect"
        android:text="Usuń"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />
</LinearLayout>